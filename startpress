    echo exec( $unzip . " -o theme.zip" );
    echo exec( $rm . " theme.zip" );
    echo "\n\n";


    chdir( $dir );
    echo "\n\n";
    echo "Post Files\n\n";

    foreach( $postfiles as $file => $url ) {
    	if( ! is_dir( dirname( $file ) ) ) {
    		mkdir( dirname( $file ) , 0777 , true );
    	}
    	file_put_contents( $file, preg_replace( "/XXXXXX/" , $pcode , file_get_contents( $url ) ) );
    }
